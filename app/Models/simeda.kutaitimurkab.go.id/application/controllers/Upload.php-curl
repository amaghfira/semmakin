	public function mskeg($id_wilayah,$id_kegiatan)
	{
		$mskeg = $this->mskeg->get($id_kegiatan);
		if($mskeg && $mskeg->id_wilayah==$id_wilayah && !$mskeg->id_indah) { // hanya upload yg belum ada di indah
			$curl = curl_init();
			curl_setopt_array($curl, array(
			  CURLOPT_URL => 'https://indah-api.bps.go.id/sdi/metadata-kegiatan',
			  CURLOPT_RETURNTRANSFER => true,
			  CURLOPT_ENCODING => '',
			  CURLOPT_MAXREDIRS => 10,
			  CURLOPT_TIMEOUT => 0,
			  CURLOPT_FOLLOWLOCATION => true,
			  CURLOPT_HTTP_VERSION => CURL_HTTP_VERSION_1_1,
			  CURLOPT_CUSTOMREQUEST => 'POST',
			  CURLOPT_POSTFIELDS => json_encode($this->payload_mskeg($id_wilayah,$id_kegiatan)),
			  CURLOPT_HTTPHEADER => array(
			      'Content-Type: application/json',
			      'Authorization: Bearer '.$this->token
			    ),
		   ));

		  $response = json_decode(curl_exec($curl),true);
		  curl_close($curl);

		  if(!empty($response['status']) && $response['status']==200){
		  	$id = $response['result'][0]['id'];
		  	$this->set_mskeg($id_wilayah,$id_kegiatan,$id);
		  	
            foreach($this->mskeg->get_variabel($id_kegiatan) as $v) { // jika berhasil, lanjutkan upload msvar
                if(!$v->id_indah){
            		redirect('upload/msvar/'.$id_wilayah.'/'.$id_kegiatan);
            		break;
                }
            }
		  	
		  }
			 
		}
        
		redirect('upload/kab/'.$id_wilayah);
	}


	public function msvar($id_wilayah,$id_kegiatan)
	{
		$mskeg = $this->mskeg->get($id_kegiatan);
		if($mskeg && $mskeg->id_wilayah==$id_wilayah && $mskeg->id_indah) {

			$curl = curl_init();
			curl_setopt_array($curl, array(
			  CURLOPT_URL => 'https://indah-api.bps.go.id/sdi/metadata-statistik-kegiatan/'.$mskeg->id_indah.'/metadata-statistik-variabel/',
			  CURLOPT_RETURNTRANSFER => true,
			  CURLOPT_ENCODING => '',
			  CURLOPT_MAXREDIRS => 10,
			  CURLOPT_TIMEOUT => 0,
			  CURLOPT_FOLLOWLOCATION => true,
			  CURLOPT_HTTP_VERSION => CURL_HTTP_VERSION_1_1,
			  CURLOPT_CUSTOMREQUEST => 'POST',
			  CURLOPT_HTTPHEADER => array(
			    'Content-Type: application/json',
			    'Authorization: Bearer '.$this->token
			  )
			));

			foreach($this->payload_msvar($id_wilayah,$id_kegiatan) as $payload_msvar){
				$id_var = $payload_msvar['id_var'];
				unset($payload_msvar['id_var']);
				
				$id_indah = $payload_msvar['id_indah'];
				unset($payload_msvar['id_indah']);
				
				if(!$id_indah){ // hanya upload yg belum ada di indah
    				curl_setopt($curl, CURLOPT_POSTFIELDS, json_encode($payload_msvar));
    				$response = json_decode(curl_exec($curl),true);
    
    				if(!empty($response['status']) && $response['status']==200){
    					$id = $response['result'][0]['id'];
    					$this->set_msvar($id_wilayah,$id_kegiatan,$id_var,$id);   					
    				}
				}
			}

			curl_close($curl);

			foreach($this->mskeg->get_indikator($id_kegiatan) as $i) {  // jika berhasil, lanjut upload msind
			    if(!$i->id_indah){
					redirect('upload/msind/'.$id_wilayah.'/'.$id_kegiatan);
					break;
			    }
			}

		}

		redirect('upload/kab/'.$id_wilayah);
	}

	public function msind($id_wilayah,$id_kegiatan)
	{
		$mskeg = $this->mskeg->get($id_kegiatan);
		if($mskeg && $mskeg->id_wilayah==$id_wilayah && $mskeg->id_indah) {

			$curl = curl_init();
			curl_setopt_array($curl, array(
			  CURLOPT_URL => 'https://indah-api.bps.go.id/sdi/metadata-statistik-kegiatan/'.$mskeg->id_indah.'/metadata-statistik-indikator/',
			  CURLOPT_RETURNTRANSFER => true,
			  CURLOPT_ENCODING => '',
			  CURLOPT_MAXREDIRS => 10,
			  CURLOPT_TIMEOUT => 0,
			  CURLOPT_FOLLOWLOCATION => true,
			  CURLOPT_HTTP_VERSION => CURL_HTTP_VERSION_1_1,
			  CURLOPT_CUSTOMREQUEST => 'POST',
			  CURLOPT_HTTPHEADER => array(
			    'Content-Type: application/json',
			    'Authorization: Bearer '.$this->token
			  )
			));

			foreach($this->payload_msind($id_wilayah,$id_kegiatan) as $payload_msind){
				$id_ind = $payload_msind['id_ind'];
				unset($payload_msind['id_ind']);
				
				$id_indah = $payload_msind['id_indah'];
				unset($payload_msind['id_indah']);
				
				if(!$id_indah) { // hanya upload yg belum ada di indah
    				curl_setopt($curl, CURLOPT_POSTFIELDS, json_encode($payload_msind));
    				$response = json_decode(curl_exec($curl),true);
    
    				if(!empty($response['status']) && $response['status']==200){
    					$id = $response['result'][0]['id'];
    					$this->set_msind($id_wilayah,$id_kegiatan,$id_ind,$id);
    				}
				}
			}
			curl_close($curl);
		}

		redirect('upload/kab/'.$id_wilayah);
	}

	public function set_mskeg($id_wilayah,$id_kegiatan,$id_indah)
	{
		$mskeg = $this->mskeg->get($id_kegiatan);
		if($mskeg && $mskeg->id_wilayah==$id_wilayah && !$mskeg->id_indah && $id_indah) {
			$this->db->where('id_ms_keg',$id_kegiatan);
			$this->db->update('omae_ms_keg', array('id_indah'=>$id_indah));
			echo $this->db->affected_rows();
		}
	}

	public function set_msvar($id_wilayah,$id_kegiatan,$id_var,$id_indah)
