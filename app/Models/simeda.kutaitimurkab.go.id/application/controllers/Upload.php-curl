		if($mskeg && $mskeg->id_wilayah==$id_wilayah && $mskeg->id_indah && $id_var && $id_indah) {
			$this->db->where('id',$id_var);
			$this->db->update('omae_ms_var', array('id_indah'=>$id_indah));
			echo $this->db->affected_rows();
		}
